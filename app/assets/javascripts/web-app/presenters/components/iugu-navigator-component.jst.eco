<section style="background:#FFF;padding-top:5px;padding-bottom:5px">
  <input class="page" type="text" style="width: 32px; text-align: center;margin-bottom:1px" value=<%= @collection.currentPage %>></input>

  <a href="#" class="btn <%= "disabled" if @collection.currentPage == @collection.firstPage %> previous"><i class="icon-chevron-left"></i></a>
  <a href="#" class="btn <%= "disabled" if @collection.currentPage == @collection.lastPage %> next"><i class="icon-chevron-right"></i></a>
</section>
