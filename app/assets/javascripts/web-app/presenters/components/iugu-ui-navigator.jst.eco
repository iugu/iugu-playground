<section style="background:#FFF;padding-top:5px;padding-bottom:5px">
  <input class="page" type="text" style="width: 50px; text-align: center;margin-bottom:1px" value=<%= @currentPage %>></input>

  <a href="#" class="button <%= "disabled" if @currentPage == @firstPage %> previous">&lt;</a>
  <a href="#" class="button <%= "disabled" if @currentPage == @lastPage %> next">&gt;</a>
</section>
